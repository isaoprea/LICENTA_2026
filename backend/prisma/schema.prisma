generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
 }

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String       
  name        String?
  submissions Submission[] 
  createdAt   DateTime     @default(now())
  role        String       @default("USER")
}

model Lesson {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  problems    Problem[] 
}

model Problem {
  id          String       @id @default(uuid())
  title       String
  description String
  difficulty  String
  testCases   Json
  lessonId    Int?         
  lesson      Lesson?      @relation(fields: [lessonId], references: [id])
  submissions Submission[]
}

model Submission {
  id          String   @id @default(uuid())
  code        String
  language    String
  status      String   @default("PENDING") 
  output      String?
  
  // LIPSEA: Pentru a salva detaliile Test Case-urilor (Input/Expected/Actual)
  testResults Json?    
  
  createdAt   DateTime @default(now())

  problemId   String
  problem     Problem  @relation(fields: [problemId], references: [id])

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
}