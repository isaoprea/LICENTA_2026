generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
 }

// schema.prisma

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String       
  name        String?
  submissions Submission[] 
  createdAt   DateTime     @default(now())
  role        String       @default("USER")
}

// 1. ADAUGĂM MODELUL MODULE
// Acesta grupează lecțiile în funcție de limbaj (ex: Python Basics, Java Advanced)
model Module {
  id          String   @id @default(uuid())
  title       String
  description String?
  language    String   // "python", "java", "cpp" - Esențial pentru filtrare
  order       Int      @default(0)
  lessons     Lesson[]
  createdAt   DateTime @default(now())
}

model Lesson {
  id          Int       @id @default(autoincrement())
  title       String
  // 2. MODIFICARE: Adăugăm un câmp 'content' pentru textul lecției (Markdown)
  content     String    @db.Text 
  description String
  order       Int       @default(0)
  
  // 3. RELAȚIE NOUĂ: Lecția aparține unui Modul
  moduleId    String
  module      Module    @relation(fields: [moduleId], references: [id])
  
  problems    Problem[] 
  createdAt   DateTime  @default(now())
}

model Problem {
  id          String   @id @default(uuid())
  title       String
  description String
  difficulty  String
  testCases   Json
  lessonId    Int?         
  lesson      Lesson?  @relation(fields: [lessonId], references: [id])
  submissions Submission[]
}

model Submission {
  id          String   @id @default(uuid())
  code        String
  language    String
  status      String   @default("PENDING") 
  output      String?
  testResults Json?    
  createdAt   DateTime @default(now())

  problemId   String
  problem     Problem  @relation(fields: [problemId], references: [id])

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
}